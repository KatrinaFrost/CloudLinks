<!-- ___________ Shows all links saved by the user ____________________ -->

<!-- http://localhost:3000/links -->

<h1>Shows All Links</h1>

<ul>
  <li><a href="/profile">Profile</a></li>
  <li><a href="/pages/feed">Cloud Feed</a></li>
  <li><a href="/links/new">New Link</a></li>
  <li><a href="/genres/new">New Category</a></li>
</ul>

<% @links.each do |l| %>

<!-- Displays the name user enters in form -->
<p><%=l.link_display_name %></p>

<!-- Displays the description user enters in form -->
<p><%=l.display_description%></p>

<!-- Displays the URL user enters in form -->
<p><%=l.display_url%></p>

<hr>

<% end %>
