<!-- This form helps the user create a genre/category and stores is -->

<%= form_for @genre do |f| %>

<fieldset>
    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true %>
  </fieldset>

  <fieldset>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </fieldset>

  <fieldset>
    <label></label>

    <%= f.submit %>
  </fieldset>

<% end %>
