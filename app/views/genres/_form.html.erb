<%= form_for @genre do |f| %>

<fieldset>
    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true %>
  </fieldset>

  <fieldset>
    <%= f.label :link %>
    <%= f.text_field :link %>
  </fieldset>

  <fieldset>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </fieldset>

  <fieldset>
    <%= f.label :image %>
    <%= f.url_field :image %>
  </fieldset>

  <fieldset>
    <label></label>
    <%= f.submit %>
  </fieldset>
<% end %>
